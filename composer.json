{
    "name": "joaobelarmino1/buscador-cursos",
    "description": "Projeto que busca os cursos no site da Alura",
    "type": "library",
    "authors": [
        {
            "name": "João Belarmino",
            "email": "joao.silva@webjump.com.br"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.3",
        "symfony/dom-crawler": "^5.3",
        "symfony/css-selector": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "JoaoBelarmino\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "*",
        "phan/phan": "^4.0"
    },
    "scripts": {
        "test": "phpunit buscar-cursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações do PHPCS, Phan e PHPUnit."
    }
}
